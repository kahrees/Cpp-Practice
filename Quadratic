#include <iostream>
#include <cmath>

int main() {

double a, b, c;

std::cout << "Enter a: ";
std::cin >> a; 

std::cout << "Enter b: ";
std::cin >> b; 

std::cout << "Enter c: ";
std::cin >> c;

double x1, x2;

x1 = ((-b) + std::sqrt(b*b - 4 * a *c))/(2 * a);
x2 = ((-b) - std::sqrt(b*b - 4 * a *c))/(2 * a);  

std::cout << "The roots of the quadratic equation are " << x1 << " and " << x2 << "\n"; 
  
}
